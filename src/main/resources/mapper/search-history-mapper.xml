<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.project.repository.SearchHistoryRepository">
    <insert id="create">
        INSERT INTO search_history (song_id, song_name, user_id, searched_at)
        VALUES (#{songId}, #{songName}, #{userId}, NOW())
    </insert>
    <select id="findByUserId" resultType="searchHistory">
        select * from search_history where user_id = #{userId}
    </select>
</mapper>