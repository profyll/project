<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.project.repository.ArtistRepository">
    <insert id="create" parameterType="artist">
        INSERT INTO artist ( artist_name, artist_id, image, genre, liked)
        VALUES ( #{artistName}, #{artistId}, #{image}, #{genre}, #{liked})
    </insert>
    <delete id="delete">
        DELETE FROM artist
        WHERE artist_id = #{artistId}
    </delete>
    <select id="findByArtistId" parameterType="String" resultType="Artist">
        SELECT * FROM artist WHERE artist_id = #{artistId}
    </select>
    <update id="update" parameterType="map">
        UPDATE artist
        SET liked = #{liked}
        WHERE artist_id = #{artistId}
    </update>
</mapper>